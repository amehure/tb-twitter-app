<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="table-responsive border">
    <table class="table">
      <tbody>
        <tr class="field form-group">
          <th class=""><%= form.label :event_no %></th>
          <td><%= form.text_field :event_no,class:"form-control" %></td>
        </tr>
        <tr class="field form-group">
          <th class=""><%= form.label :event_name %></th>
          <td><%= form.text_field :event_name,class:"form-control" %></td>
        </tr>
        <tr class="field form-group">
          <th class=""><%= form.label :contents %></th>
          <td><%= form.text_field :contents,class:"form-control" %></td>
        </tr>

        <tr class="field form-group">
          <th class=""><%= form.label :days_held %></th>
          <td><%= form.number_field :days_held,class:"form-control" %></td>
        </tr>

        <tr class="field form-group">
          <th class=""><%= form.label :organizar %></th>
          <td><%= form.text_field :organizar,class:"form-control" %></td>
        </tr>

        <tr class="field form-group">
          <th class=""><%= form.label :deadline %></th>
          <td><%= form.datetime_field :deadline,class:"form-control" %></td>
        </tr>

        <tr class="field form-group">
          <th class=""><%= form.label :multiple_entries %></th>
          <td>
            <%= form.check_box :multiple_entries, { class:"form-control"}, 1, 0 %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class:"btn btn-secondary btn-block" %>
  </div>
<% end %>
